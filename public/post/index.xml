	var keys []string
	for _, id := range ids {
		keys = append(keys, fmt.Sprintf(&amp;quot;data_%d&amp;quot;, id))
	}
	if err := func1(); err != nil {
		return err
	}
	return nil
}
&lt;/code&gt;&lt;/pre&gt;
