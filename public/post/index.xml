func correctShow(ids ...int64) (err error) {
	keys := make([]string, 0, len(ids))
	for _, id := range ids {
		keys = append(keys, fmt.Sprintf(&amp;quot;data_%d&amp;quot;, id))
	}
	if err = func1(); err != nil {
		return
	}
	return
}
